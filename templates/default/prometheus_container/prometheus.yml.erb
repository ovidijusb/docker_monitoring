global:
  scrape_interval:     10s
  evaluation_interval: 10s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:<%= @prometheus_port %>']
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['<%= @host_ip %>:<%= @node_exporter_port %>']
  - job_name: 'cadvisor'
    static_configs:
      - targets: ['<%= @host_ip %>:<%= @cadvisor_port %>']
